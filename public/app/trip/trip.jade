.container
  .well
    form.form-horizontal(name="tripForm")
      fieldset
        legend Search Trip
        .form-group
          label.col-md-2.control-label(for="origin") From
          .col-md-10
            select.form-control(data-ng-model="trip.origin", data-ng-options="s.nr + '. ' + s.name for s in stations")
        .form-group
          label.col-md-2.control-label(for="destination") To
          .col-md-10
            select.form-control(data-ng-model="trip.destination", data-ng-options="s.nr + '. ' + s.name for s in stations")        
        .form-group
          label.col-md-2.control-label(for="time") Time
          .col-md-10
            input.form-control(name="time", type="text", placeholder="Time", ng-model="time", required)        
        .form-group
          .col-md-10.col-md-offset-2
            .pull-right
              button.btn.btn-primary(ng-click="purchase()", ng-disabled="tripForm.$invalid") Buy ticket
